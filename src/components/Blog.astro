---
import { getCollection } from "astro:content";
import Card from "./Card.astro";
const posts = await getCollection("blog");
---

<section class="blog">
  {
    posts.map((post) => {
      return (
        <Card
          title={post.data.title}
          slug={post.slug}
          language={post.data.language}
        />
      );
    })
  }
</section>
