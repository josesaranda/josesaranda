<div class="button-container">
  <button id="themeButton"></button>
</div>
<script>
  const button = document.getElementById("themeButton");

  function setMode(isDark: boolean) {
    button!.innerHTML = `<span class='emoji small'>${
      isDark ? "ðŸŒž" : "ðŸŒ™"
    }</span>`;
    isDark
      ? document.body.classList.add("dark")
      : document.body.classList.remove("dark");

    document.getElementById("love")!.innerHTML = isDark ? "ðŸ’š" : "ðŸ’œ";
  }

  let preferredDarkMode =
    window.matchMedia &&
    window.matchMedia("(prefers-color-scheme: dark)").matches;

  setMode(preferredDarkMode);

  button?.addEventListener("click", () => {
    preferredDarkMode = !preferredDarkMode;
    setMode(preferredDarkMode);
  });

  window
    .matchMedia("(prefers-color-scheme: dark)")
    .addEventListener("change", (event) => {
      preferredDarkMode = event.matches;
      setMode(preferredDarkMode);
    });
</script>

