---
import { t } from "i18next";
import BlogButton from "./BlogButton/BlogButton.astro";
import LanguageButton from "./LanguageButton/LanguageButton.astro";
import { ThemeButton } from "./ThemeButton";
import "./Navbar.scss";

const { redirect, title, showLogo, showLanguageButton = true } = Astro.props;
---

<div class="navbar">
  <div class="navbar-left">
    {
      showLogo && (
        <a class="logo" href={t("site.home_url")}>
          <img src="/images/profile.jpeg" width="48px" height="48px" alt="" />
        </a>
      )
    }
    <h1>{title}</h1>
  </div>
  <div class="menu-right">
    {(<BlogButton redirect={redirect} />)}
    {showLanguageButton && <LanguageButton redirect={redirect} />}
    <ThemeButton client:load />
  </div>
</div>
