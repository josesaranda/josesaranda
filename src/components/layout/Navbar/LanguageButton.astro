---
import { t } from "i18next";
const { redirect } = Astro.props;
---

<a id="language-button" class="language-button" href={redirect}
  >{t("site.language.flag")}</a
>
<script>
  const homeLink = document.getElementById("home")!;
  const blogLink = document.getElementById("blog")!;

  const isSpanish = document.location.pathname.startsWith("/es");

  homeLink.setAttribute("href", isSpanish ? "/es" : "/");
  blogLink.setAttribute("href", isSpanish ? "/es/blog" : "/blog");
</script>
<style>
  a.language-button {
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    text-transform: uppercase;
    margin-right: var(--spacing-2);
    background: var(--bg-primary);
    color: var(--c-secondary) !important;
    border: 0;
    cursor: pointer;
    border-radius: 10px;
    -webkit-box-shadow: 0px 0px 20px 0px var(--c-secondary);
    -moz-box-shadow: 0px 0px 20px 0px var(--c-secondary);
    box-shadow: 0px 0px 20px 0px var(--c-secondary);
    font-size: var(--font-1);
    width: 48px;
    height: 48px;
  }

  a.language-button:hover {
    transform: scale(1);
  }

  @media (max-width: 768px) {
    a.language-button {
      width: 42px;
      height: 42px;
      font-size: var(--font-0);
      margin-right: var(--spacing-7);
      margin-bottom: var(--spacing-1);
    }
  }
</style>
