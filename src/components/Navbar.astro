---
import { t } from "i18next";
import { ThemeButton } from "./ThemeButton/ThemeButton";
---

<div class="navbar-container">
  <div>
    <a class="language-button" href={t("site.language.redirect-route")}
      >{t("site.language.flag")}</a
    >
    <ThemeButton client:load />
  </div>
</div>

<style>
  .navbar-container {
    position: fixed;
    max-width: 1200px;
    width: 100%;
    margin: auto;
    top: 70px;
  }

  .navbar-container div {
    display: flex;
    width: 100%;
    justify-content: end;
    align-items: center;
    flex-direction: row;
    padding-right: 10px;
  }

  a.language-button {
    margin-right: 10px;
    background: var(--bg-primary);
    color: var(--c-secondary) !important;
    border: 0;
    cursor: pointer;
    border-radius: 100%;
    -webkit-box-shadow: 0px 0px 20px 0px var(--c-secondary);
    -moz-box-shadow: 0px 0px 20px 0px var(--c-secondary);
    box-shadow: 0px 0px 20px 0px var(--c-secondary);
    font-size: 24px;
    width: 48px;
    height: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    text-transform: uppercase;
  }

  a.language-button:hover {
    transform: scale(1);
  }

  @media (max-width: 768px) {
    a.language-button {
      font-size: 20px;
      width: 42px;
      height: 42px;
      margin-right: 28px;
    }

    .navbar-container div {
      flex-direction: column-reverse;
      justify-content: end;
      align-items: end;
    }
  }
</style>
<style is:global>
  body {
    --c-primary: #000;
    --c-secondary: #7b6ab8;
    --bg-primary: #fff;
    --bg-secondary: #000;

    color: var(--c-primary);
    background: var(--bg-primary);
    transition: 0.5s all;
  }

  body.dark {
    --c-primary: #fff;
    --c-secondary: #70a2a0;
    --bg-primary: #111011;
    --bg-secondary: #fff;
  }
</style>
