---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
import Link from "./link.astro";
import Button from "./button.astro";
import Section from "./section.astro";
---

<section
  class="relative snap-start min-h-full h-auto w-full flex flex-col p-4 gap-8 justify-center items-center m-auto max-w-7xl"
>
  <div class="contents text-slate-50 text-2xl">
    <Button href={t("site.language.redirect-route")}>
      <Trans i18nKey="site.language.flag">
        <span class="text-green-200"></span>
      </Trans>
    </Button>
  </div>
  <div class="flex flex-col justify-center items-center lg:mt-0 h-full">
    <span
      class="bg-gray-400 rounded-lg bg-clip-padding backdrop-filter backdrop-blur-sm bg-opacity-50 p-4 mb-8 animate__onvisible"
    >
      <img
        class="w-60 lg:w-80 rounded-lg shadow-lg"
        src="/images/profile.jpeg"
        alt="José Sánchez Aranda"
      />
    </span>
    <h1
      class="animate__onvisible font-montserrat lg:text-9xl text-6xl mb-4 lg:-ml-[400px] text-slate-200 lg:bg-gray-500 lg:rounded-lg lg:bg-clip-padding lg:backdrop-filter lg:backdrop-blur-sm lg:bg-opacity-20 lg:p-4"
    >
      {t("greeting.title")}
    </h1>
    <h2
      class="animate__onvisible font-lora lg:text-6xl text-2xl lg:ml-[400px] text-green-200 lg:bg-gray-500 lg:rounded-lg lg:bg-clip-padding lg:backdrop-filter lg:backdrop-blur-sm lg:bg-opacity-20 lg:p-4"
    >
      {t("greeting.name")}
    </h2>
  </div>
</section>
<Section dark blur center>
  <div class="flex flex-col justify-center items-center">
    <p
      class="font-lora text-xl lg:text-3xl mb-4 max-w-7xl m-auto lg:leading-[50px]"
    >
      <Trans i18nKey="greeting.paragraph">
        <Link target="_blank" href="https://knowmadmood.com" />
        <span class="text-green-200"></span>
        <span class="text-green-200"></span>
        <Link
          href="https://github.com/josesaranda/josesaranda"
          target="_blank"
        />
      </Trans>
    </p>
  </div>
</Section>
