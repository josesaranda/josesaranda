---
import { getCollection } from "astro:content";
import Card from "../Card/Card.astro";
import "./Blog.scss";
const posts = await getCollection("blog");
---

<section class="blog">
  {
    posts.map((post) => {
      return (
        <Card
          title={post.data.title}
          slug={post.slug}
          image={post.data.image}
          language={post.data.language}
        />
      );
    })
  }
</section>
