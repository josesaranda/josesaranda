---
interface Props {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props;
---

<a class="group" href={link} target="_blank">
  <div
    class="max-w-screen-2xl mx-auto px-4 md:px-16 pt-0 py-16 lg:pt-16 lg:py-16"
  >
    <p
      class="text-gray-500 text-3xl lg:text-4xl font-serif leading-tight mb-6 group-hover:text-blue-900 transition-all duration-300 ease-in-out"
    >
      {title}
    </p>
    <p class="text-gray-800 text-xl lg:text-2xl font-sans leading-tight">
      {description}
    </p>
  </div>
</a>
