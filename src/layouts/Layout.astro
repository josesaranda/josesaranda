<style is:global>
  html {
    font-family: system-ui, sans-serif;
    margin: 0;
    padding: 0;
  }

  * {
    margin: 0;
    padding: 0;
  }

  h1 {
    font-size: 50px;
  }

  h2 {
    font-size: 50px;
    margin-bottom: 5px;
  }

  h3 {
    font-size: 28px;
    margin-bottom: 10px;
  }

  h4 {
    font-size: 24px;
    margin-bottom: 4px;
  }

  h5 {
    font-size: 22px;
    margin-top: 0px;
    margin-bottom: 6px;
  }

  a {
    color: var(--c-primary);
  }

  a:hover {
    transform: scale(1.2);
    transition: 0.5s;
    color: var(--c-secondary);
  }

  p {
    margin-top: 0;
    margin-bottom: 10px;
    font-size: 20px;
    line-height: 32px;
  }

  section {
    margin-top: 50px;
    margin-bottom: 50px;
  }

  span.emoji {
    font-size: 48px;
    vertical-align: middle;
  }

  span.emoji.small {
    font-size: 36px;
  }

  @media (max-width: 768px) {
    span.emoji.small {
      font-size: 28px;
    }
  }
</style>
