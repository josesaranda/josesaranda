---
import Blog from "@josesaranda-web/components/Blog.astro";
import Footer from "@josesaranda-web/components/layout/Footer/Footer.astro";
import Navbar from "@josesaranda-web/components/layout/Navbar/Navbar.astro";
import Social from "@josesaranda-web/components/sections/Social/Social.astro";
import Layout from "@josesaranda-web/layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout>
  <main>
    <Navbar
      redirect={t("site.language.redirect-route") + "/blog"}
      showLogo="true"
      title="Blog"
    />
    <Blog />
    <Social />
  </main>
  <Footer />
</Layout>
